<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/data_tiles_head"
            app:autoSizeTextType="uniform"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/data_tiles_head">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:padding="14dp">

    <!--        Riga 1 col 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/holo_blue_dark"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:weightSum="12"
                    android:layout_margin="16dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="@string/data_tiles_total"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:textColor="@android:color/black"
                        android:autoSizeMinTextSize="16dp"
                        android:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_margin="6dp"
                        android:id="@+id/tile_total"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/tile_total_delta"
                        android:autoSizeTextType="uniform" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

    <!--        Riga 1 col 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/holo_orange_dark"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_margin="16dp" >

                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/data_tiles_active"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_weight="6"
                        android:id="@+id/tile_active"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/tile_active_delta"
                        android:layout_weight="2"
                        android:autoSizeTextType="uniform" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_margin="16dp" >

                    <TextView
                        android:id="@+id/tile_healed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/tile_healed_delta"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/data_tiles_healed"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--        Riga 2 col 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@android:color/holo_red_dark"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_margin="16dp" >

                    <TextView
                        android:id="@+id/tile_deaths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/tile_deaths_delta"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/data_tiles_deaths"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>

</LinearLayout>